---
// Skeleton FAQ Component
---
<section class="container faq-skeleton loading-state" style="padding-block: var(--space-8);">
  <div class="grid">
    <div class="col-8 md:col-12">
      <!-- Section title skeleton -->
      <div class="skeleton skeleton-text skeleton-headline" style="margin-bottom: var(--space-5); width: 20%;"></div>

      <!-- FAQ items skeleton -->
      <div class="skeleton-faq-item">
        <div class="skeleton skeleton-text skeleton-subheadline" style="width: 60%; margin-bottom: 1rem;"></div>
        <div class="skeleton skeleton-text skeleton-paragraph"></div>
        <div class="skeleton skeleton-text skeleton-paragraph" style="width: 80%;"></div>
      </div>

      <div class="skeleton-faq-item">
        <div class="skeleton skeleton-text skeleton-subheadline" style="width: 70%; margin-bottom: 1rem;"></div>
        <div class="skeleton skeleton-text skeleton-paragraph"></div>
        <div class="skeleton skeleton-text skeleton-paragraph" style="width: 90%;"></div>
      </div>

      <div class="skeleton-faq-item">
        <div class="skeleton skeleton-text skeleton-subheadline" style="width: 55%; margin-bottom: 1rem;"></div>
        <div class="skeleton skeleton-text skeleton-paragraph"></div>
        <div class="skeleton skeleton-text skeleton-paragraph" style="width: 75%;"></div>
      </div>

      <div class="skeleton-faq-item">
        <div class="skeleton skeleton-text skeleton-subheadline" style="width: 65%; margin-bottom: 1rem;"></div>
        <div class="skeleton skeleton-text skeleton-paragraph"></div>
        <div class="skeleton skeleton-text skeleton-paragraph" style="width: 85%;"></div>
      </div>

      <div class="skeleton-faq-item" style="border-bottom: none;">
        <div class="skeleton skeleton-text skeleton-subheadline" style="width: 50%; margin-bottom: 1rem;"></div>
        <div class="skeleton skeleton-text skeleton-paragraph"></div>
        <div class="skeleton skeleton-text skeleton-paragraph" style="width: 70%;"></div>
      </div>
    </div>
  </div>
</section>