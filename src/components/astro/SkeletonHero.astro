---
// Skeleton Hero Component
---
<section class="hero-section hero-skeleton loading-state" style="padding-top:0; padding-bottom:var(--space-7);">
  <div class="hero-card bg-aurora-hero has-grain grain-hero" style="position: relative; display: flex; align-items: flex-start; padding: var(--space-7);">
    <div class="hero-card__content">
      <!-- Skeleton headline -->
      <div style="margin-bottom: var(--space-4);">
        <div class="skeleton skeleton-text skeleton-headline"></div>
        <div class="skeleton skeleton-text skeleton-headline" style="width: 70%;"></div>
      </div>

      <!-- Skeleton subheadline -->
      <div style="margin-bottom: var(--space-5); max-width: 460px;">
        <div class="skeleton skeleton-text skeleton-paragraph"></div>
        <div class="skeleton skeleton-text skeleton-paragraph"></div>
        <div class="skeleton skeleton-text skeleton-paragraph" style="width: 75%;"></div>
      </div>

      <!-- Skeleton CTA button -->
      <div class="skeleton skeleton-button"></div>
    </div>
  </div>
</section>