---
// Skeleton Feature Cards Component
---
<section class="container loading-state" style="padding-block: var(--space-8);">
  <div class="grid">
    <div class="col-12">
      <!-- Section title skeleton -->
      <div class="skeleton skeleton-text skeleton-headline" style="margin-bottom: var(--space-6); width: 40%;"></div>

      <!-- Feature cards grid skeleton -->
      <div class="skeleton-feature-grid">
        <!-- Skeleton Feature Card 1 -->
        <div class="skeleton-card">
          <div class="skeleton skeleton-icon"></div>
          <div class="skeleton skeleton-text skeleton-subheadline" style="width: 80%; margin-bottom: 1rem;"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph" style="width: 85%;"></div>
        </div>

        <!-- Skeleton Feature Card 2 -->
        <div class="skeleton-card">
          <div class="skeleton skeleton-icon"></div>
          <div class="skeleton skeleton-text skeleton-subheadline" style="width: 75%; margin-bottom: 1rem;"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph" style="width: 90%;"></div>
        </div>

        <!-- Skeleton Feature Card 3 -->
        <div class="skeleton-card">
          <div class="skeleton skeleton-icon"></div>
          <div class="skeleton skeleton-text skeleton-subheadline" style="width: 85%; margin-bottom: 1rem;"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph" style="width: 80%;"></div>
        </div>

        <!-- Skeleton Feature Card 4 -->
        <div class="skeleton-card">
          <div class="skeleton skeleton-icon"></div>
          <div class="skeleton skeleton-text skeleton-subheadline" style="width: 70%; margin-bottom: 1rem;"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph"></div>
          <div class="skeleton skeleton-text skeleton-paragraph" style="width: 95%;"></div>
        </div>
      </div>
    </div>
  </div>
</section>