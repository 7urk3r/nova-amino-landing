---
// Skeleton Marquee using real Marquee structure
---
<section class="container marquee-section loading-state">
  <div class="marquee-card-surface bg-aurora-marquee has-grain grain-marquee">
    <div class="marquee-shell">
      <div class="marquee-header">
        <!-- Skeleton title -->
        <div class="skeleton" style="height: 2.5rem; width: 60%; margin: 0 auto 1rem; border-radius: 8px;"></div>
        <!-- Skeleton subtitle -->
        <div style="max-width: 800px; margin: 0 auto;">
          <div class="skeleton" style="height: 1.2rem; width: 100%; margin-bottom: 0.5rem; border-radius: 6px;"></div>
          <div class="skeleton" style="height: 1.2rem; width: 85%; margin: 0 auto; border-radius: 6px;"></div>
        </div>
      </div>

      <div class="marquee-viewport">
        <!-- First row of skeleton quote cards -->
        <div class="marquee-row" style="top:0">
          <div class="marquee-track">
            <!-- Skeleton Quote Card 1 -->
            <figure class="quote-card">
              <div>
                <div class="skeleton" style="height: 1.5rem; width: 70%; margin-bottom: 1rem; border-radius: 6px;"></div>
              </div>
              <div class="quote-meta">
                <div class="skeleton" style="height: 1rem; width: 60%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 0.875rem; width: 80%; border-radius: 4px;"></div>
              </div>
              <div style="margin: 1rem 0;">
                <div class="skeleton" style="height: 1rem; width: 100%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 90%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 75%; border-radius: 4px;"></div>
              </div>
              <div class="skeleton" style="height: 0.875rem; width: 50%; border-radius: 4px;"></div>
            </figure>

            <!-- Skeleton Quote Card 2 -->
            <figure class="quote-card">
              <div>
                <div class="skeleton" style="height: 1.5rem; width: 65%; margin-bottom: 1rem; border-radius: 6px;"></div>
              </div>
              <div class="quote-meta">
                <div class="skeleton" style="height: 1rem; width: 55%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 0.875rem; width: 75%; border-radius: 4px;"></div>
              </div>
              <div style="margin: 1rem 0;">
                <div class="skeleton" style="height: 1rem; width: 95%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 85%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 80%; border-radius: 4px;"></div>
              </div>
              <div class="skeleton" style="height: 0.875rem; width: 45%; border-radius: 4px;"></div>
            </figure>

            <!-- Skeleton Quote Card 3 -->
            <figure class="quote-card">
              <div>
                <div class="skeleton" style="height: 1.5rem; width: 75%; margin-bottom: 1rem; border-radius: 6px;"></div>
              </div>
              <div class="quote-meta">
                <div class="skeleton" style="height: 1rem; width: 65%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 0.875rem; width: 70%; border-radius: 4px;"></div>
              </div>
              <div style="margin: 1rem 0;">
                <div class="skeleton" style="height: 1rem; width: 100%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 80%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 70%; border-radius: 4px;"></div>
              </div>
              <div class="skeleton" style="height: 0.875rem; width: 55%; border-radius: 4px;"></div>
            </figure>

            <!-- Duplicate for continuous scroll -->
            <figure class="quote-card">
              <div>
                <div class="skeleton" style="height: 1.5rem; width: 70%; margin-bottom: 1rem; border-radius: 6px;"></div>
              </div>
              <div class="quote-meta">
                <div class="skeleton" style="height: 1rem; width: 60%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 0.875rem; width: 80%; border-radius: 4px;"></div>
              </div>
              <div style="margin: 1rem 0;">
                <div class="skeleton" style="height: 1rem; width: 100%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 90%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 75%; border-radius: 4px;"></div>
              </div>
              <div class="skeleton" style="height: 0.875rem; width: 50%; border-radius: 4px;"></div>
            </figure>
          </div>
        </div>

        <!-- Second row -->
        <div class="marquee-row" style="top:288px">
          <div class="marquee-track slower">
            <!-- More skeleton cards for second row -->
            <figure class="quote-card">
              <div>
                <div class="skeleton" style="height: 1.5rem; width: 80%; margin-bottom: 1rem; border-radius: 6px;"></div>
              </div>
              <div class="quote-meta">
                <div class="skeleton" style="height: 1rem; width: 70%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 0.875rem; width: 85%; border-radius: 4px;"></div>
              </div>
              <div style="margin: 1rem 0;">
                <div class="skeleton" style="height: 1rem; width: 95%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 100%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 65%; border-radius: 4px;"></div>
              </div>
              <div class="skeleton" style="height: 0.875rem; width: 40%; border-radius: 4px;"></div>
            </figure>

            <figure class="quote-card">
              <div>
                <div class="skeleton" style="height: 1.5rem; width: 60%; margin-bottom: 1rem; border-radius: 6px;"></div>
              </div>
              <div class="quote-meta">
                <div class="skeleton" style="height: 1rem; width: 50%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 0.875rem; width: 90%; border-radius: 4px;"></div>
              </div>
              <div style="margin: 1rem 0;">
                <div class="skeleton" style="height: 1rem; width: 90%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 85%; margin-bottom: 0.5rem; border-radius: 4px;"></div>
                <div class="skeleton" style="height: 1rem; width: 95%; border-radius: 4px;"></div>
              </div>
              <div class="skeleton" style="height: 0.875rem; width: 60%; border-radius: 4px;"></div>
            </figure>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>