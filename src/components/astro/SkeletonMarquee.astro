---
// Skeleton Marquee Component
---
<section class="container marquee-skeleton loading-state" style="padding-block: var(--space-8); background: #f8f9fa;">
  <div class="grid">
    <div class="col-12">
      <!-- Section header skeleton -->
      <div class="text-center" style="margin-bottom: var(--space-6);">
        <div class="skeleton skeleton-text skeleton-headline" style="width: 45%; margin: 0 auto 1rem;"></div>
        <div class="skeleton skeleton-text skeleton-subheadline" style="width: 35%; margin: 0 auto;"></div>
      </div>

      <!-- Quotes grid skeleton -->
      <div class="grid" style="gap: var(--space-4);">
        <!-- Skeleton Quote Card 1 -->
        <div class="col-4 md:col-12">
          <div class="skeleton-quote-card">
            <div class="skeleton skeleton-text skeleton-paragraph"></div>
            <div class="skeleton skeleton-text skeleton-paragraph"></div>
            <div class="skeleton skeleton-text skeleton-paragraph" style="width: 80%; margin-bottom: 2rem;"></div>

            <div style="display: flex; align-items: center; gap: 1rem;">
              <div class="skeleton skeleton-avatar"></div>
              <div style="flex: 1;">
                <div class="skeleton skeleton-text" style="width: 70%; margin-bottom: 0.5rem; height: 1em;"></div>
                <div class="skeleton skeleton-text" style="width: 50%; height: 0.8em;"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Skeleton Quote Card 2 -->
        <div class="col-4 md:col-12">
          <div class="skeleton-quote-card">
            <div class="skeleton skeleton-text skeleton-paragraph"></div>
            <div class="skeleton skeleton-text skeleton-paragraph"></div>
            <div class="skeleton skeleton-text skeleton-paragraph" style="width: 85%; margin-bottom: 2rem;"></div>

            <div style="display: flex; align-items: center; gap: 1rem;">
              <div class="skeleton skeleton-avatar"></div>
              <div style="flex: 1;">
                <div class="skeleton skeleton-text" style="width: 80%; margin-bottom: 0.5rem; height: 1em;"></div>
                <div class="skeleton skeleton-text" style="width: 60%; height: 0.8em;"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Skeleton Quote Card 3 -->
        <div class="col-4 md:col-12">
          <div class="skeleton-quote-card">
            <div class="skeleton skeleton-text skeleton-paragraph"></div>
            <div class="skeleton skeleton-text skeleton-paragraph"></div>
            <div class="skeleton skeleton-text skeleton-paragraph" style="width: 75%; margin-bottom: 2rem;"></div>

            <div style="display: flex; align-items: center; gap: 1rem;">
              <div class="skeleton skeleton-avatar"></div>
              <div style="flex: 1;">
                <div class="skeleton skeleton-text" style="width: 75%; margin-bottom: 0.5rem; height: 1em;"></div>
                <div class="skeleton skeleton-text" style="width: 55%; height: 0.8em;"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>