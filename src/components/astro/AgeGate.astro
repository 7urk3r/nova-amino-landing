---
// Age Gate Component - Elegant 21+ verification
---

<div id="age-gate" class="age-gate-overlay">
  <div class="age-gate-modal">
    <div class="age-gate-content">
      <!-- Logo -->
      <div class="age-gate-logo">
        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L2 7V17L12 22L22 17V7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M12 22V12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M22 7L12 12L2 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <h2>Nova Amino</h2>
      </div>

      <!-- Title -->
      <h1 class="age-gate-title">Age Verification Required</h1>

      <!-- Description -->
      <p class="age-gate-description">
        You must be 21 years or older to access this site.
        Our products are intended for research purposes only.
      </p>

      <!-- Buttons -->
      <div class="age-gate-buttons">
        <button id="age-gate-yes" class="age-gate-btn age-gate-btn--primary">
          I am 21 or older
        </button>
        <button id="age-gate-no" class="age-gate-btn age-gate-btn--secondary">
          I am under 21
        </button>
      </div>

      <!-- Legal Text -->
      <p class="age-gate-legal">
        By entering this site, you confirm that you are of legal age and agree to our terms of service.
      </p>
    </div>
  </div>
</div>

<style>
  .age-gate-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 0.5s ease-out;
  }

  .age-gate-overlay.fade-out {
    opacity: 0;
    pointer-events: none;
  }

  .age-gate-modal {
    background: white;
    border-radius: 24px;
    padding: 48px;
    max-width: 480px;
    width: 90%;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    transform: translateY(0);
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    animation: age-gate-enter 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  @keyframes age-gate-enter {
    0% {
      opacity: 0;
      transform: translateY(40px) scale(0.9);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .age-gate-content {
    text-align: center;
  }

  .age-gate-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 32px;
    color: #1a1a1a;
  }

  .age-gate-logo h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }

  .age-gate-title {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .age-gate-description {
    font-family: var(--font-body);
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin: 0 0 32px 0;
  }

  .age-gate-buttons {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 24px;
  }

  .age-gate-btn {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 600;
    padding: 16px 32px;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .age-gate-btn--primary {
    background: #2D60EE;
    color: white;
  }

  .age-gate-btn--primary:hover {
    background: #1d4ed8;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(45, 96, 238, 0.3);
  }

  .age-gate-btn--secondary {
    background: #f3f4f6;
    color: #6b7280;
    border: 2px solid #e5e7eb;
  }

  .age-gate-btn--secondary:hover {
    background: #e5e7eb;
    border-color: #d1d5db;
  }

  .age-gate-legal {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: #9ca3af;
    line-height: 1.4;
    margin: 0;
  }

  /* Mobile responsiveness */
  @media (max-width: 640px) {
    .age-gate-modal {
      padding: 32px 24px;
      margin: 16px;
    }

    .age-gate-title {
      font-size: 1.75rem;
    }

    .age-gate-description {
      font-size: 1rem;
    }
  }

  /* Hide scrollbar when age gate is active */
  body.age-gate-active {
    overflow: hidden;
  }
</style>

<script>
  // Age Gate Logic
  const ageGate = document.getElementById('age-gate');
  const yesButton = document.getElementById('age-gate-yes');
  const noButton = document.getElementById('age-gate-no');

  // Check if user has already verified their age
  const isVerified = localStorage.getItem('nova-amino-age-verified');

  if (isVerified === 'true') {
    // User already verified, hide age gate immediately
    hideAgeGate();
  } else {
    // Show age gate and prevent scrolling
    document.body.classList.add('age-gate-active');
  }

  // Handle "Yes" button click
  yesButton?.addEventListener('click', () => {
    // Save verification status
    localStorage.setItem('nova-amino-age-verified', 'true');

    // Add success animation
    yesButton.style.background = '#10b981';
    yesButton.textContent = 'âœ“ Welcome';

    // Hide age gate with delay for animation
    setTimeout(() => {
      hideAgeGate();
    }, 800);
  });

  // Handle "No" button click
  noButton?.addEventListener('click', () => {
    // Redirect to appropriate page or show message
    alert('You must be 21 or older to access this site.');
    window.location.href = 'https://www.google.com';
  });

  function hideAgeGate() {
    if (ageGate) {
      ageGate.classList.add('fade-out');
      document.body.classList.remove('age-gate-active');

      setTimeout(() => {
        ageGate.style.display = 'none';
      }, 500);
    }
  }

  // Optional: Clear verification for testing (remove in production)
  // localStorage.removeItem('nova-amino-age-verified');
</script>